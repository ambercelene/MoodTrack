<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/entry_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood_entry_header"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginTop="@dimen/entry_vertical_margin" />

    <Spinner
        android:id="@+id/entry_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_header"
        android:layout_marginTop="@dimen/entry_vertical_margin"
        tools:padding="5dp" />

    <TextView
        android:id="@+id/entry_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_spinner"
        android:text="@string/mood_entry_description"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginTop="@dimen/entry_vertical_margin" />

    <EditText
        android:id="@+id/entry_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="@string/entry_textbox_hint"
        android:inputType="textAutoComplete"
        android:textSize="18sp"
        android:layout_below="@id/entry_mood"
        android:layout_marginTop="@dimen/entry_vertical_margin" />

    <TextView
        android:id="@+id/entry_intensity_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_description"
        android:text="@string/mood_entry_intensity"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginTop="@dimen/entry_vertical_margin" />

    <RadioGroup
        android:id="@+id/entry_intensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_description"
        android:layout_toEndOf="@+id/entry_intensity_header"
        android:layout_toRightOf="@+id/entry_intensity_header"
        android:layout_marginTop="@dimen/entry_radio_margin"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/intensity_level_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            android:id="@+id/intensity_level_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            android:id="@+id/intensity_level_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <RadioButton
            android:id="@+id/intensity_level_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />

        <RadioButton
            android:id="@+id/intensity_level_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />
    </RadioGroup>

    <TextView
        android:id="@+id/entry_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_intensity"
        android:text="@string/mood_entry_duration"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginTop="@dimen/entry_vertical_margin" />

    <Button
        android:id="@+id/save_entry_btn"
        android:text="@string/save_entry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_below="@id/entry_duration"
        android:layout_marginTop="@dimen/entry_vertical_margin" />

</RelativeLayout>